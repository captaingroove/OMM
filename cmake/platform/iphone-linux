set (CMAKE_SYSTEM_NAME Generic)
set (CMAKE_SYSTEM_PROCESSOR arm)
set_PROPERTY(GLOBAL PROPERTY TARGET_SUPPORTS_SHARED_LIBS FALSE)


set (SDKVER "5.0")
set (XCHAIN_ROOT $ENV{XCHAIN_ROOT})
set (SDKROOT "${XCHAIN_ROOT}/cc/iphone/share/iPhoneOS${SDKVER}.sdk")

#set (CMAKE_AR "arm-apple-darwin11-ar")
set (CMAKE_C_COMPILER "clang")
set (CMAKE_CXX_COMPILER "clang++")

set (CMAKE_C_FLAGS "-target arm-apple-darwin11 -arch armv7 --sysroot ${SDKROOT} -isysroot ${SDKROOT} -g0 -O2 -miphoneos-version-min=${SDKVER} -mlinker-version=134.9 -objc-arc -fblocks" CACHE STRING "additional cross compiling c flags" FORCE)
set (CMAKE_CXX_FLAGS "-target arm-apple-darwin11 -arch armv7 --sysroot ${SDKROOT} -isysroot ${SDKROOT} -g0 -O2 -miphoneos-version-min=${SDKVER} -mlinker-version=134.9 -objc-arc -fblocks" CACHE STRING "additional cross compiling cxx flags" FORCE)

set (CMAKE_FIND_ROOT_PATH "${SDKROOT}" "${CMAKE_INSTALL_PREFIX}")
set (CMAKE_FIND_ROOT_PATH_MODE_PROGRAM BOTH)
set (CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set (CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
